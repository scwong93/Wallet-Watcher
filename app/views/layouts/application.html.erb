<!DOCTYPE html>
<html>
  <head>
    <title>Wallet Watcher</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul class="nav nav-tabs" style="background-color: lightblue;">
      <% if user_signed_in? %>
        <li><%= link_to "Home", expenses_path %></li>
        <li><%= link_to "Details", expenses_path %></li>
        <li><%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
        <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
        <li class="pull-right" style="margin-top: 10px; margin-right: 10px;">Signed in as: <strong><%= current_user.email %></strong></li>
      <% end %>
    </ul>

    <% if flash[:notice] %>
       <div class="alert alert-success">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:notice] %>
       </div>
    <% elsif flash[:alert] %>
       <div class="alert alert-warning">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:alert] %>
       </div>
    <% end %>

    <%= yield %>
  </body>
</html>
