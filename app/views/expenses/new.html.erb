<h1>Add Expense</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @expense do |f| %>
      <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, class: 'form-control', placeholder: "Enter date" %>
      </div>
      <div class="form-group">
        <%= f.label :category %><br>
        <%= f.select :category, options_for_select(%w[Food Shopping Hobbies Gift Transportation Rent Other]) %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control', placeholder: "Enter description" %>
      </div>
      <div class="form-group">
        <%= f.label :amount %>
        <%= f.number_field :amount, class: 'form-control', placeholder: "Enter amount" %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
