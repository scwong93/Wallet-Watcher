<h1>Add Budget</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @budget do |f| %>
      <div class="form-group">
        <%= f.label :budget %>
        <%= f.number_field :amount, class: 'form-control', placeholder: "Enter budget" %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
